<%- include("./partials/adminNavbar") %>
<link rel="stylesheet" href="/css/adminPanelcss.css">


<% const price = Number(product.price)  %> 

<div class="adminPanel">
    <form action="/admin/edit/product/<%= product._id %> " method="POST" autocomplete="off">
        <div class="form-group">
            <label for="exampleInputEmail1">Name</label>
            <input value="<%= product.name %> " required name="productName" type="text" class="form-control" id="exampleInputEmail1"
                aria-describedby="emailHelp" placeholder="Product Name">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Price</label>
            <input required value="<%= price %>" name="productPrice" type="number" class="form-control" id="exampleInputPassword1"
                placeholder="Price">
        </div>
        <div class="form-group">
            <label for="file">Choose Image</label>
            <input value="<%= product.image %> " name="productImage" type="file" accept="image/*" class="form-control" id="file"
                class="custom-file-input">
        </div>

        <button type="submit" class="btn btn-raised btn-primary">Update</button>
        <a href="/admin/products" class="btn btn-raised btn-danger">cancel</a>
    </form>
</div>